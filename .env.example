# MailSift - Environment Variables Configuration
# Copy this file to .env and fill in your values

# ===========================================
# MongoDB Configuration (Required)
# ===========================================
# MongoDB connection string
# Local: mongodb://localhost:27017/mailsift
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/mailsift
MONGODB_URI=mongodb://localhost:27017/mailsift

# ===========================================
# Session Configuration (Required for Web)
# ===========================================
# A secure random string for session encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-super-secret-session-key-here

# ===========================================
# JWT Configuration (Required for Mobile/API)
# ===========================================
# A secure random string for JWT signing
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-jwt-secret-key-here

# ===========================================
# AWS Bedrock Configuration (Optional - for AI-powered extraction)
# ===========================================
# Your AWS credentials for Bedrock AI services
# These enable AI-powered email discovery for better results
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# ===========================================
# Server Configuration
# ===========================================
# Port for the server (default: 5000)
PORT=5000

# Node environment (development | production)
NODE_ENV=development
